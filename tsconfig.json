{
  "compilerOptions": {
    "listFiles": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": false,
    "lib": ["ES2021", "DOM", "WebWorker"],
    "allowJs": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["src/**/*"]
}
